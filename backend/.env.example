# Rename to .env and fill in your values
# Firebase Admin service account JSON path (relative to backend root)
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/<dbName>?retryWrites=true&w=majority&appName=<appName>

# CORS origin for the frontend app
CORS_ORIGIN=http://localhost:5173

# Port to run the API
PORT=5000
